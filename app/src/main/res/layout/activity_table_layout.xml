<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12">


    <TableRow android:layout_weight="3">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="7" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="8" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="9" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:text="/" />
    </TableRow>

    <TableRow android:layout_weight="3">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="4" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="5" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="6" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:text="x" />
    </TableRow>

    <TableRow android:layout_weight="3">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="1" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="2" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="3" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:text="-" />
    </TableRow>

    <TableRow android:layout_weight="3">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="." />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="0" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:text="=" />
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/AppTheme.BotonCalculadora.Rojo"
            android:text="+" />
    </TableRow>
</TableLayout>
